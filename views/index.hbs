<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hrechka price</title>
    <link rel="stylesheet" href="assets/styles/main.css">
    <link rel="stylesheet" href="assets/styles/grid.css">   

</head>
<body>
    <!-- LOADER -->
    <div class="loader hide center-all">
        <h2>Hrechka planet</h2>
    </div>
    <!-- LOADER -->
    <div class="dark-bg"></div>
    <!-- Header starts -->
    <nav class="navigation center-all">
        <div class="container-full start">
            <div class="container row start vertical-center">
                <h3><a href="/">Hrechka planet</a></h3>
                <a class="open-graph center-all">Графік цін</a>
            </div>
        </div>
    </nav>
    <header class="header">
        <div class="container-full full-height">
            <div class="container full-height two-per-row-no-margin">
                <div class="header-wrap grid-el vertical-center">
                    <div class="text-inner">
                        <h1>Ми знайдемо для вас найкращу гречку</h1>
                        <a href="#search" class="center-all margin-top-30">Каталог</a>
                        <a href="#" class="center-all margin-top-10 open-graph">Графік цін</a>
                    </div>                    
                </div>
                <div class="header-wrap grid-el center-all padding-2vw">
                    <div class="planet">
                        <img src="./assets/img/jpg/header-image.jpg" alt="Space image">
                    </div>
                </div>
            </div>
        </div>
        <div class="dark-image-bg"></div>
    </header>

    <!-- Header ends -->


    <!-- graph starts -->
    <div class="graph-popup">
        <div class="container-full full-height padding-1vw">
            <div class="container full-height">
                <div class="graph-wrapper full-height center-all">
                    <div id="container" class="full-width"></div>
                </div>
            </div>
        </div>
        <div class="close" id="close-graph">
            <span></span>
            <span></span>
        </div>
    </div>
    <!-- graph ends -->

    <!-- Search starts -->
    <div class="container-full searchbar margin-top-50" id="search">
        <div class="container">
            <form action="" class="page-action">
                <!-- Search line -->
                <div class="search-container row vertical-center">
                    <label for="search" class="center-all">
                        <i class="center-all fas fa-search"></i>
                    </label>
                    <input type="search" placeholder="Search" name="search">
                    <label for="search" class="center-all filter" id='show-filters'>
                        Фільтри
                    </label>
                    <button class="vertical-center" type="submit">
                        <i class="center-all fas fa-arrow-right"></i>
                    </button>
                </div>
    
                <!-- Search line -->
    
                <!-- Search block -->
                <div class="filter-container margin-top-25 five-per-row">
                    <!-- Price -->
                    <div class="grid-el column">
                        <h4>Ціна</h4>
                        <div class="variant">
                            <input type="radio" id="less-price" name="price-price-value" value="less-price-variant" checked>
                            <label for="less-price-variant">Від дешевих до дорогих</label>
                        </div>
                        <div class="variant">
                            <input type="radio" id="more-price" name="price-price-value" value="more-price-variant">
                            <label for="more-price-variant">Від дорогих до дешевих</label>
                        </div>
                    </div>
                    <!-- Price -->
    
                    <!-- Weight -->
                    <div class="grid-el column">
                        <h4>Вага</h4>
                        <div class="variant">
                            <input type="checkbox" id="weight-80" name="weight-80-value" value="80" checked>
                            <label for="80">80г</label>
                        </div>
                        <div class="variant">
                            <input type="checkbox" id="weight-100" name="weight-120-value" value="100">
                            <label for="100">100г</label>
                        </div>
                        <div class="variant">
                            <input type="checkbox" id="weight-120" name="weight-140-value" value="120">
                            <label for="120">120г</label>
                        </div>
                        <div class="variant">
                            <input type="checkbox" id="weight-140" name="weight-160-value" value="140">
                            <label for="140">140г</label>
                        </div>
                    </div>
                    <!-- Weight -->
    
                    <!-- Company -->
                    <div class="grid-el column">
                        <h4>Постачальник</h4>
                        <div class="variant">
                            <input type="checkbox" id="company-one" name="company-one-value" value="80" checked>
                            <label for="company-one">Розетка</label>
                        </div>
                        <div class="variant">
                            <input type="checkbox" id="company-two" name="company-two-value" value="company-two">
                            <label for="company-two">Комфі</label>
                        </div>
                        <div class="variant">
                            <input type="checkbox" id="company-three" name="company-two-value" value="company-three">
                            <label for="company-three">Готуй дома</label>
                        </div>
                        <div class="variant">
                            <input type="checkbox" id="company-four" name="company-two-value" value="company-four">
                            <label for="company-four">Все у Равшана</label>
                        </div>
                    </div>
                    <!-- Company -->
                </div>
                <!-- Search block -->
            </form>
        </div>
    </div> 
    <!-- Search ends -->

    <!-- PRODUCT LIST STARTS -->
    <div class="container-full product-container margin-top-50">
        <!-- <div class="container margin-vertical-50">
            <h2>Всі товари</h2>
        </div> -->
        <div class="container">
            <ul class="product-list three-per-row">
                 {{#if products.length}}
                    {{#each products}}
                        <li class="product-el grid-el between column padding-1vw">
                            <div>
                                <div class="image-wrap">
                                    <img src="{{image}}" alt="{{name}}">
                                </div>
                                <div class="info-wrap">
                                    <span>{{name}}</span>
                                </div>
                            </div>
                            <div class="product-action column">
                                <div class="product-action-info vertical-bottom three-per-row-no-margin one-per-row-mobile">
                                    <p class="grid-el"><i class="fas fa-weight-hanging"></i> {{weight}} г</p>
                                    <p class="grid-el center-all"><img class="grid-el" src="./assets/img/png/rozetka.png" alt="Rozetka"></p>
                                    <p class="price grid-el row end">{{price}} грн</p>  
                                </div>
                                <div class="product-action-buttons two-per-row">
                                    <a href="{{link}}" class="center-all grid-el buy"><i class="fas fa-shopping-cart"></i></a>
                                    <a class="center-all grid-el open-product-popup">Деталі</a>
                                </div>
                            </div>
                            <div class="product-popup">
                                <div class="container-full full-height padding-1vw">
                                    <div class="container full-height two-per-row-no-margin one-per-row-mobile vertical-center">
                                        <div class="product-popup-image grid-el">
                                            <img src="{{image}}" alt="{{name}}">
                                        </div>
                                        <div class="product-popup-table grid-el horizontal-center column">
                                            <h4>Деталі</h4>
                                            <table>
                                                <tr>
                                                    <td>Вага</td>
                                                    <td>{{weight}}</td>
                                                </tr>
                                                <tr>
                                                    <td>Ціна</td>
                                                    <td>{{price}}</td>
                                                </tr>
                                                <tr>
                                                    <td>Ціна за г</td>
                                                    <td>{{price_g}}</td>
                                                </tr>
                                                <tr>
                                                    <td>Магазин</td>
                                                    <td>{{site}}</td>
                                                </tr>
                                            </table>
                                            <a href="{{link}}" class="center-all"><i class="fas fa-shopping-cart"></i></a>
                                        </div>
                                    </div>
                                </div>
                                <div class="close close-product">
                                    <span></span>
                                    <span></span>
                                </div>
                            </div>
                    </li>
                    {{/each}}
                {{/if}}
        
                <li class="product-el grid-el column between padding-1vw">
                    <div>
                        <div class="image-wrap">
                            <img src="https://i2.rozetka.ua/goods/14397645/art_foods_4820191590977_images_14397645953.jpg" alt="">
                        </div>
                        <div class="info-wrap">
                            <span>Крупи гречані Pere ядриця швидкороз
                                
                                варювана 800 г (4820191590540)</span>
                        </div>
                    </div>
                    <div class="product-action column">
                        <div class="product-action-info vertical-bottom three-per-row-no-margin one-per-row-mobile">
                            <p class="grid-el"><i class="fas fa-weight-hanging"></i> 100г</p>
                            <p class="grid-el center-all"><img class="grid-el" src="./assets/img/png/metro.png" alt="Metro"></p>
                            <p class="price grid-el row end">300грн</p>  
                        </div>
                        <div class="product-action-buttons two-per-row">
                            <a class="center-all grid-el buy"><i class="fas fa-shopping-cart"></i></a>
                            <a class="center-all grid-el open-product-popup">Деталі</a>
                        </div>
                    </div>
                    <div class="product-popup">
                        <div class="container-full full-height padding-1vw">
                            <div class="container full-height two-per-row-no-margin vertical-center">
                                <div class="product-popup-image grid-el">
                                    <img src="./assets/img/jpg/product-3.jpg" alt="">
                                </div>
                                <div class="product-popup-table grid-el horizontal-center column">
                                    <h4>Деталі</h4>
                                    <table>
                                        <tr>
                                            <td>TEXT</td>
                                            <td>1</td>
                                        </tr>
                                        <tr>
                                            <td>TEXT</td>
                                            <td>2</td>
                                        </tr>
                                        <tr>
                                            <td>TEXT</td>
                                            <td>3</td>
                                        </tr>
                                    </table>
                                    <a href="" class="center-all"><i class="fas fa-shopping-cart"></i></a>
                                </div>
                            </div>
                        </div>
                        <div class="close close-product">
                            <span></span>
                            <span></span>
                        </div>
                    </div>
                </li>
                <li class="product-el grid-el column between padding-1vw">
                    <div>
                        <div class="image-wrap">
                            <img src="https://i2.rozetka.ua/goods/14397645/art_foods_4820191590977_images_14397645953.jpg" alt="">
                        </div>
                        <div class="info-wrap">
                            <span>Крупи гречані Pere ядриця швидкороз
                                
                                варювана 800 г (4820191590540)</span>
                        </div>
                    </div>
                    <div class="product-action column">
                        <div class="product-action-info vertical-bottom three-per-row-no-margin one-per-row-mobile">
                            <p class="grid-el"><i class="fas fa-weight-hanging"></i> 100г</p>
                            <p class="grid-el center-all"><img class="grid-el" src="./assets/img/png/prom.png" alt="Prom"></p>
                            <p class="price grid-el row end">300грн</p>  
                        </div>
                        <div class="two-per-row">
                            <a class="center-all grid-el buy"><i class="fas fa-shopping-cart"></i></a>
                            <a class="center-all grid-el open-product-popup">Деталі</a>
                        </div>
                    </div>
                    <div class="product-popup">
                        <div class="container-full full-height padding-1vw">
                            <div class="container full-height two-per-row-no-margin vertical-center">
                                <div class="product-popup-image grid-el">
                                    <img src="https://i2.rozetka.ua/goods/14397645/art_foods_4820191590977_images_14397645953.jpg" alt="">
                                </div>
                                <div class="product-popup-table grid-el horizontal-center column">
                                    <h4>Деталі</h4>
                                    <table>
                                        <tr>
                                            <td>TEXT</td>
                                            <td>TEXT</td>
                                        </tr>
                                        <tr>
                                            <td>TEXT</td>
                                            <td>TEXT</td>
                                        </tr>
                                        <tr>
                                            <td>TEXT</td>
                                            <td>TEXT</td>
                                        </tr>
                                    </table>
                                    <a href="" class="center-all"><i class="fas fa-shopping-cart"></i></a>
                                </div>
                            </div>
                        </div>
                        <div class="close close-product">
                            <span></span>
                            <span></span>
                        </div>
                    </div>
                </li>
            </ul>
        </div>
    </div>
    <!-- PRODUCT LIST STARTS -->

    <!-- Footer starts -->
    <footer class="footer margin-top-100 vertical-center">
        <div class="logo-slider">
            <h3>JWP</h3>
            <h3>JWP</h3>
            <h3>JWP</h3>
            <h3>JWP</h3>
            <h3>JWP</h3>
            <h3>JWP</h3>
            <h3>JWP</h3>
            <h3>JWP</h3>
        </div>
    </footer>
